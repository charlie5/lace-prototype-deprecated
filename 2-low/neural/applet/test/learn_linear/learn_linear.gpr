with "neural";

project Learn_Linear is

   type Build_Kind1 is
      ("default");
   type Os_Type is
      ("Windows_NT", "Linux", "MacOSX");
   type Restrictions is
      ("xgc", "ravenscar");
   type Platform is
      ("egl", "glx");
   type Profile is
      ("safe", "lean", "desk");
   for Object_Dir use "build";
   for Exec_Dir use ".";
   for Main use ("launch_learn_linear.adb");
   type Build_Kind is
      ("release", "develop");
   Build_Kind : Build_Kind := external ("BUILD_KIND");
   type Os_Kind is
      ("linux-gnu", "linux-x86_64-pc-linux-gnu", "solaris2.11");
   Ostype : Os_Kind := external ("OSTYPE");
   type Gtkada_Kind_Type is
      ("static", "relocatable");
   Library_Type : Gtkada_Kind_Type := external ("LIBRARY_TYPE");
   Opengl_Profile : Profile := external ("opengl_profile");
   Opengl_Platform : Platform := external ("opengl_platform");
   Restrictions : Restrictions := external ("restrictions");
   OS : Os_Type := external ("OS");
   FLORIST_BUILD : Build_Kind1 := external ("FLORIST_BUILD");

   package Builder is

      case Opengl_Profile is

         when "safe" =>
            for Default_Switches ("ada") use ("-g");

         when "lean" =>
            for Default_Switches ("ada") use ("-g");

         when "desk" =>

            case Opengl_Platform is

               when "egl" =>
                  for Default_Switches ("ada") use ("-g");

               when "glx" =>

                  case Restrictions is

                     when "xgc" =>

                        case OS is

                           when "Windows_NT" =>

                              case FLORIST_BUILD is

                                 when "default" =>

                                    case Library_Type is

                                       when "static" =>

                                          case Ostype is

                                             when "linux-gnu" =>

                                                case Build_Kind is

                                                   when "release" =>
                                                      for Default_Switches ("ada") use ("-g", "-j13");

                                                   when "develop" =>
                                                      for Default_Switches ("ada") use ("-g");
                                                end case;

                                             when "linux-x86_64-pc-linux-gnu" =>
                                                for Default_Switches ("ada") use ("-g");

                                             when "solaris2.11" =>
                                                for Default_Switches ("ada") use ("-g");
                                          end case;

                                       when "relocatable" =>
                                          for Default_Switches ("ada") use ("-g");
                                    end case;
                              end case;

                           when "Linux" =>
                              for Default_Switches ("ada") use ("-g");

                           when "MacOSX" =>
                              for Default_Switches ("ada") use ("-g");
                        end case;

                     when "ravenscar" =>
                        for Default_Switches ("ada") use ("-g");
                  end case;
            end case;
      end case;
   end Builder;

   package Compiler is

      case Opengl_Profile is

         when "safe" =>
            for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");

         when "lean" =>
            for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");

         when "desk" =>

            case Opengl_Platform is

               when "egl" =>
                  for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");

               when "glx" =>

                  case Restrictions is

                     when "xgc" =>

                        case OS is

                           when "Windows_NT" =>

                              case FLORIST_BUILD is

                                 when "default" =>

                                    case Library_Type is

                                       when "static" =>

                                          case Ostype is

                                             when "linux-gnu" =>

                                                case Build_Kind is

                                                   when "release" =>
                                                      for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat12");

                                                   when "develop" =>
                                                      for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");
                                                end case;

                                             when "linux-x86_64-pc-linux-gnu" =>
                                                for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");

                                             when "solaris2.11" =>
                                                for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");
                                          end case;

                                       when "relocatable" =>
                                          for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");
                                    end case;
                              end case;

                           when "Linux" =>
                              for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");

                           when "MacOSX" =>
                              for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");
                        end case;

                     when "ravenscar" =>
                        for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-gnata", "-g", "-gnat05");
                  end case;
            end case;
      end case;
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is

      case Build_Kind is

         when "release" =>

         when "develop" =>

            case Ostype is

               when "linux-gnu" =>

                  case Library_Type is

                     when "static" =>
                        for Default_Switches ("ada") use ("-lGL");

                     when "relocatable" =>

                  end case;

               when "linux-x86_64-pc-linux-gnu" =>

               when "solaris2.11" =>

            end case;
      end case;
   end Linker;

end Learn_Linear;

