with "gl";

project Linkage_Test is

   for Object_Dir use "build";
   for Exec_Dir use ".";
   for Main use ("launch_gl_linkage_test.adb");
   type Os_Type is
      ("Windows_NT", "Linux", "MacOSX");
   Os : Os_Type := external ("OS");

   package Builder is
      for Default_Switches ("ada") use ("-k", "-g", "-j13");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-g", "-gnata", "-gnat12");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is

      case Os is

         when "Windows_NT" =>
            for Default_Switches ("ada") use ("-g");

         when "Linux" =>
            for Default_Switches ("ada") use ("-g", "-lX11", "-lGL");

         when "MacOSX" =>
            for Default_Switches ("ada") use ("-g");
      end case;
   end Linker;

   package Pretty_Printer is

      case Os is

         when "Windows_NT" =>

         when "Linux" =>
            for Default_Switches ("ada") use ("-A1");

         when "MacOSX" =>

      end case;
   end Pretty_Printer;

end Linkage_Test;

