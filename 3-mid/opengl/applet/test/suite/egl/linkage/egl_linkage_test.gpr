with "opengl", "swig";

project Egl_Linkage_Test is

   type Profile is
      ("safe", "lean", "desk");
   type Platform is
      ("egl", "glx");
   type Os_Type is
      ("Windows_NT", "Linux", "MacOSX");
   type Restrictions is
      ("xgc", "ravenscar");
   for Object_Dir use "build";
   for Exec_Dir use ".";
   for Main use ("launch_egl_linkage_test.adb");
   Restrictions : Restrictions := external ("restrictions");
   OS : Os_Type := external ("OS");
   Opengl_Platform : Platform := external ("opengl_platform");
   Opengl_Profile : Profile := external ("opengl_profile");

   package Builder is
      for Default_Switches ("ada") use ("-k", "-g");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnato", "-fstack-check", "-g", "-gnata", "-gnat12");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is

      case Restrictions is

         when "xgc" =>

            case OS is

               when "Windows_NT" =>
                  for Default_Switches ("ada") use ("-g");

               when "Linux" =>

                  case Opengl_Platform is

                     when "egl" =>

                        case Opengl_Profile is

                           when "safe" =>
                              for Default_Switches ("ada") use ("-g");

                           when "lean" =>
                              for Default_Switches ("ada") use ("-g", "-lEGL");

                           when "desk" =>
                              for Default_Switches ("ada") use ("-g");
                        end case;

                     when "glx" =>
                        for Default_Switches ("ada") use ("-g");
                  end case;

               when "MacOSX" =>
                  for Default_Switches ("ada") use ("-g");
            end case;

         when "ravenscar" =>
            for Default_Switches ("ada") use ("-g");
      end case;
   end Linker;

end Egl_Linkage_Test;

