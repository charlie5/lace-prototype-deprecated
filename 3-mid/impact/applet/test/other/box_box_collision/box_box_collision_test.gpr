with "impact";

project Box_Box_Collision_Test is

   for Object_Dir use "build";
   for Exec_Dir use ".";
   for Main use ("launch_box_box_collision_test.adb");
   type Restrictions is
      ("xgc", "ravenscar");
   Restrictions : Restrictions := external ("restrictions");

   package Builder is

      case Restrictions is

         when "xgc" =>
            for Default_Switches ("ada") use ("-g", "-j13");

         when "ravenscar" =>
            for Default_Switches ("ada") use ("-g");
      end case;
   end Builder;

   package Compiler is

      case Restrictions is

         when "xgc" =>
            for Default_Switches ("ada") use ("-g", "-gnat12");

         when "ravenscar" =>
            for Default_Switches ("ada") use ("-gnat12");
      end case;
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

end Box_Box_Collision_Test;

