with 
     "lace_shared";

project Xml
is

   for Source_Dirs use ("../source");
   for Object_Dir use "build";

   package Builder is
      for Default_Switches ("ada") use ("-g", "-lpthread");
   end Builder;

   package Compiler renames Lace_shared.Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is
      for Linker_Options use ("-g", "-lexpat");
   end Linker;

end Xml;

